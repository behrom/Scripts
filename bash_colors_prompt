# /etc/bashrc

# colors in bash
if [ "$EUID" -eq 0 ]; then
    # Color red and bold for root
    export PS1="\e[38;5;1m\e[1m\u@\h\e[21m \e[38;5;75m\w:\e[0m$ "
else
    # Color green for user
    export PS1="\e[0;49;92m\u@\h\e[21m \e[38;5;75m\w:\e[0m$ "
fi



# If you want to change colors: http://misc.flogisoft.com/bash/tip_colors_and_formatting
